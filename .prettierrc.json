{
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "bracketSameLine": false,
  "plugins": ["prettier-plugin-svelte", "@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "<BUILTIN _MODULES>",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@.+[.]svelte$",
    "^[.].+[.]svelte$",
    "",
    "^@.+",
    "^[.]{2}",
    "",
    "^[.]",
    "",
    ".css$"
  ],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "svelteIndentScriptAndStyle": false
      }
    },
    {
      "files": "*.{json,yml}",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
