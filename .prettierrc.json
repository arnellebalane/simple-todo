{
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "bracketSameLine": false,
  "plugins": ["prettier-plugin-svelte"],

  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "svelteIndentScriptAndStyle": false
      }
    },
    {
      "files": "*.{json,yml}",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
